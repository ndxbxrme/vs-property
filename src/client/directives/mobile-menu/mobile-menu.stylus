@import '../../variables'
.mobile-menu
  position absolute
  top 81px
  width 180px
  right 0
  bottom 0
  z-index 0
  background #f1f1f1
  ul li
    border-bottom 1px solid vs-lightgrey
    a 
      font-size 1.6rem
      color vs-grey
      font-family ProximaNova-SemiBold, sans-serif
      padding 15px 20px 10px 20px
      display block
      z-index 1
      i
        display inline-block
        width 10px
    &.selected, &:hover
      background #eee
      a
        color vs-orange
  